	protected void windowClosed() {
		int a = JOptionPane.NO_OPTION;
		a = JOptionPane.showConfirmDialog(this, "Deseja Sair Realmente?",
				"Sistema Gerenciador de Curriculos", JOptionPane.YES_NO_OPTION);
		if (a == JOptionPane.YES_OPTION)
			System.exit(0);

	}

